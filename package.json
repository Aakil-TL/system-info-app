{
  "name": "electron-system-info",
  "version": "1.0.0",
  "description": "A desktop app to view detailed system information",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^13.6.9",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-reload": "^2.0.0-alpha.1",
    "systeminformation": "^5.22.7"
  },
  "build": {
    "publish": "never",
    "appId": "com.example.systeminfo",
    "productName": "System Info App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
